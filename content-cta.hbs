{{{html}}}
<aside class="gh-post-upgrade-cta">
  <div
    class="gh-post-upgrade-cta-content"
    style="background-color: {{accentColor}}"
  >
    {{#has visibility="paid"}}
      <h2>Chỉ thành viên của Net Walker mới có thể tải nội dung này</h2>
    {{/has}}
    {{#has visibility="members"}}
      <h2>Chỉ thành viên của Net Walker mới có thể tải nội dung này</h2>
    {{/has}}
    {{#has visibility="filter"}}
      <h2>This post is for subscribers on the {{products}} only </h2>
    {{/has}}
    {{#if @member}}
      <a
        class="gh-btn"
        data-portal="account/plans"
        style="color:{{accentColor}}"
      >Nâng cấp VIP</a>
    {{else}}
      <a class="gh-btn" data-portal="signup" style="color:{{accentColor}}">Đăng
        kí</a>
      <p><small>Đã là thành viên của Net Walker ?
          <a data-portal="signin">Đăng nhập</a></small></p>
    {{/if}}
  </div>
</aside>