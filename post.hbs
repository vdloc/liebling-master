
{{!-- This block preloads specific assets for the post page --}}
{{#contentFor "preload"}}
  <link rel="preload" href="{{asset "css/post.css"}}" as="style" />
  <link rel="preload" href="{{asset "js/post.js"}}" as="script" />
{{/contentFor}}

{{!-- This block loads specific styles for the post page --}}
{{#contentFor "styles"}}
  <link rel="stylesheet" type="text/css" href="{{asset "css/post.css"}}" media="screen" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lightgallery@1.8.3/dist/css/lightgallery.min.css">
{{/contentFor}}



{{!-- The tag below means: insert everything in this file
into the {body} of the default.hbs template --}}
{{!< default}}

{{#post}}
{{! Post Featured Image }}
<figure class='relative h-mobile-hero-height md:h-hero-height'>
  <span class='responsive-img'>
    <img src='{{img_url feature_image}}' alt='{{title}}' />
  </span>
</figure>
{{! Post }}
<article class='pt-[60px] pb-10'>
  {{! Post Header }}
  <header class='text-center font-bold text-titles dark:text-dark-titles sm:max-w-[51.25rem] mx-auto'>
    <h1 class='sm:pt-3 sm:mb-5 text-3xl md:text-[2.625rem] leading-tight tracking-wide'>
      {{title}}
    </h1>
    <ul class='flex justify-center mt-10 flex-wrap gap-2'>
      {{#foreach tags}}
      <li class=>       
        {{> common/badge }}
      </li>
      {{/foreach}}
    </ul>
    {{#foreach authors}}
    <address class='mt-4 mb-7 text-center text-sm text-link dark:text-dark-link not-italic'>
      <span class=''>
        Đăng bởi {{name}}      
      </span>
      -
      <time datetime='{{published_at}}'>
        {{date published_at}}
      </time>
    </address>
    {{/foreach}}
  </header>
  <div class="md:hidden flex justify-center">
    <script type="text/javascript">
      atOptions = {
        'key' : 'bbf4624dd597e0fcfe09c60a505b3de9',
        'format' : 'iframe',
        'height' : 50,
        'width' : 320,
        'params' : {}
      };
      document.write('<scr' + 'ipt type="text/javascript" src="http' + (location.protocol === 'https:' ? 's' : '') + '://persistarcticthese.com/bbf4624dd597e0fcfe09c60a505b3de9/invoke.js"></scr' + 'ipt>');
    </script>
  </div>
  {{! Post Content }}
  <div class='sm:mt-[3rem] flex items-stretch'>
    <div class="flex-grow-0 sm:flex-1 order-1 relative h-auto">
      {{> socials}}
    </div>
    <aside class="flex-grow-0 sm:flex-1 flex flex-col items-center">
       {{> ads/adsense/vertical}}
      </aside>    
    <div class='post-content !px-0' >
      <div id='post-content' class='post-content lg:w-post-content-width dark:text-dark-titles mt-3'>
        {{content}}
      </div>      
    </div>  
  </div>  
   {{!-- Ads --}}
  <div class="flex justify-center mt-10">
    {{> ads/adsense/horizontal}}
  </div>
  {{!-- Tags Section --}}
  <section class="md:w-post-content-width mx-auto mt-10 px-5 md:px-auto">
    <h3 class="font-bold text-2xl dark:text-dark-titles">Thẻ</h3>
    <ul class='flex flex-wrap mt-5 gap-2'>
      {{#foreach tags}}
        <li>
          {{>common/badge}}
        </li>
      {{/foreach}}
    </ul>
  </section>
  {{!-- Ads --}}
  {{> ads/adsterra/mobile-native-banner}}
  </div>    
  {{!-- Comment Section --}} 
  <section class="md:w-post-content-width mx-auto mt-20 px-5 md:px-auto" id="comment-section">
    <h3 class="font-bold text-2xl dark:text-dark-titles">Bình luận</h3>
    <div id="remark42" class="mt-5"></div>
  </section>
</article>

{{!-- Related Posts--}}
{{> common/related-posts postTag=primary_tag.slug postID=id}}
{{/post}}

{{!-- Newsletter form --}}
<div class="mt-10 mb-20">
  <div class="container px-5">
    {{> common/newsletter}}
  </div>
</div>


{{!-- Ads Banner --}}
<div class="container w-full mb-20">
  <div align="center">
  {{> ads/adsense/grid}}  
  </div>
</div>
{{!-- The #contentFor helper here will send everything inside it up to the matching #block helper found in default.hbs --}}
{{#contentFor "scripts"}}
  <script defer src="{{asset "js/post.js"}}"></script>
  <script defer src="{{asset "js/vendor/lightgallery-all.min.js"}}"></script>
  {{!-- Ads --}}
  <script async="async" data-cfasync="false" src="//pl17048196.trustedcpmrevenue.com/11b95e0363ac678ff2623ebfb92ec3fe/invoke.js"></script>
{{/contentFor}}