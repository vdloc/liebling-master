{{#get
  "posts"
  filter="featured:true+tag:{{postsTag}}"
  include="authors,tags"
  limit="5"
  as |featuredPosts|
}}
  {{#if featuredPosts}}
    <div
      class="swiper transition-transform transition-fix ease-out duration-200 max-w-viewport-width"
    >
      <div class="swiper-wrapper">
        {{#foreach featuredPosts}}
          <div
            class="swiper-slide transition-all ease-default duration-300 !w-full"
          >
            <div
              class="p-5 sm:p-10 h-card-height-mobile sm:h-card-height relative overflow-hidden sm:rounded-2xl"
            >
              <article
                class="relative z-10 h-full flex flex-col justify-between"
              >
                <header>
                  <section class="flex justify-between">
                    <div>
                      {{! Author }}
                      <div
                        class="relative z-50 bg-white block rounded-full w-7 h-7 sm:w-9 sm:h-9 overflow-hidden"
                      >
                        {{#if primary_author.profile_image}}
                          <div
                            class="w-full h-full bg-cover"
                            style="background-image: url({{img_url
                              primary_author.profile_image
                            }});"
                          ></div>
                        {{else}}
                          <div
                            class="w-full h-full bg-cover"
                            style="background-image: url({{asset
                              'images/default-avatar-square-small.jpg'
                            }});"
                          ></div>
                        {{/if}}

                      </div>
                      {{! Tag }}
                      <a href="{{primary_tag.url}}">
                        <p class="mt-5 font-bold text-white capitalize">
                          {{primary_tag.name}}
                        </p>
                      </a>
                    </div>
                    {{! Featured Badge }}
                    <a href="{{url}}" class="flex flex-1 justify-end">
                      <div
                        class="flex items-center h-6 px-2 rounded-2xl bg-white font-bold text-sm"
                      >
                        <span class="icon-star"></span>
                        <span class="ml-1">Nổi bật</span>
                      </div>
                    </a>
                  </section>
                  {{! Title }}
                  <a href="{{url}}">
                    <h2
                      class="max-w-[80%] mt-5 text-2xl sm:text-4xl leading-tight text-white font-semibold"
                      title="{{title}}"
                    >
                      {{title}}
                    </h2>
                  </a>
                </header>
                {{! Time }}
                <a href="{{url}}" class="flex flex-1 items-end">
                  <footer>
                    <time
                      datetime="{{published_at}}"
                      class="text-white text-sm sm:text-base"
                    >{{date published_at timeago="true"}}</time>
                  </footer>
                </a>
              </article>
              {{! Background Image }}
              <section class="absolute top-0 left-0 -z-5 w-full h-full">
                <figure class="relative w-full h-full transition-fix">
                  <span class="responsive-img">
                    <img
                      alt="{{title}}"
                      sizes="100vw"
                      src="{{img_url feature_image}}"
                      decoding="async"
                      loading="lazy"
                    />
                  </span>
                </figure>
              </section>
              {{! Backdrop }}
              <a href="{{url}}">
                <div
                  class="absolute top-0 left-0 -z-4 w-full h-full backdrop-brightness-75"
                >
                </div>
              </a>
            </div>
          </div>
        {{/foreach}}
      </div>
      <button
        class="js-featured-slider-prev absolute bottom-2 sm:bottom-10 right-16 sm:right-20 z-20 flex items-center justify-center w-10 h-10 rounded-full focus:shadow-sm transition-shadow transition-fix text-white text-sm font-normal"
      >
        <span class="icon-arrow-left" aria-hidden="true"></span>
      </button>
      <button
        class="js-featured-slider-next absolute bottom-2 sm:bottom-10 right-5 sm:right-10 z-20 flex items-center justify-center w-10 h-10 rounded-full focus:shadow-sm transition-shadow transition-fix text-white text-sm font-normal"
      >
        <span class="icon-arrow-right" aria-hidden="true"></span>
      </button>
    </div>
  {{/if}}
{{/get}}